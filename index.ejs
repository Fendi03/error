<!doctype html>
<html lang="en">
  <style type="text/css">
  .table {
    counter-reset: serial-number;
  }
  .table td:first-child:before {
    counter-increment: serial-number;
    content: counter(serial-number);
  }
  </style>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Data Peserta</title>
  </head>
  <body>
    <h1 style="text-align: center;"><b>Data Peserta Lomba Olahraga SMA</b></h1>
    <div class ="container">
      <form
      action = "/add"
      method ="post"
      enctype="application/x-www-form-urlencoded">
      <button type="submit" class = "btn btn-primary">Tambah Data</button>
      <table class ="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Kelas</th>
            <th scope="col">Lomba yang Diikuti</th>
            <th scope="col">Action</th>
          </tr> 
        </thead>
        <tbody>
          <% dataPeserta.forEach((v)=>{%>
          <tr>
            <td></td>
            <td><%= v.Nama %></td>
            <td><%= v.Kelas %></td>
            <td><%= v.lomba %></td>
            <td>
              <a class = "btn btn-primary" href="/update/<%=v.No%>">Update</button>
              <a class = "btn btn-primary" onClick="return alert('Yakin?')" href="/delete/<%=v.No%>">Delete</a>
            </td>
          </tr>
            <%})%>
            
        </tbody>
      </table>
    </form>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>